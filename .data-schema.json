{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/Idrinth/lwv/master/.data-schema.json",
  "type": "object",
  "patternProperties": {
    "^https?://.+": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "persons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "source": {
          "type": "string"
        },
        "level": {
          "type": "string",
          "enum": ["any", "apprentice", "journeyman", "master", "lead"],
          "default": "any"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "tags",
        "level"
      ]
    }
  },
  "additionalProperties": false
}
